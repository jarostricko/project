@model IEnumerable<SchoolProject.Models.StudentAnswer>

@{
    ViewBag.Title = "Answers";
}

<h2>Answers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Answer.AnswerText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer.Question.Text)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Answer.AnswerText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Answer.Question.Text)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StudentAnswerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.StudentAnswerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StudentAnswerID })
        </td>
    </tr>
}

</table>
