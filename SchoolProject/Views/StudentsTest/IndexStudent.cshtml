@model IEnumerable<SchoolProject.Models.StudentsTest>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            Student
        </th>
        <th>
            Email
        </th>
        <th>
            Points from test
        </th>

        <th>
            @Html.DisplayNameFor(m => m.TestTemplate.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.FullName)
            </td>
            <td>
                @Html.DisplayFor(m => item.Student.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)/@Html.DisplayFor(model => item.Points)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TestTemplate.Name)
            </td>

            <td>
                @Html.ActionLink("Your Answers List", "AnswersStudent", new { id = item.StudentTestID })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Back", "Index", "Student")
</p>
