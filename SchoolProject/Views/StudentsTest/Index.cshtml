@model IEnumerable<SchoolProject.Models.StudentsTest>

@{
    ViewBag.Title = "Test Results";
}

<h2>Test Results</h2>


<table class="table">
    <tr>
        <th>
            Student
        </th>
        <th>
            Email
        </th>
        <th>
            Points from test
        </th>

        <th>
            @Html.DisplayNameFor(m => m.TestTemplate.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.FullName)
            </td>
            <td>
                @Html.DisplayFor(m => item.Student.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points) / @Html.DisplayFor(model => item.TestTemplate.FullPoints)
            </td>

            <td>
                @*@Html.DisplayFor(modelItem => item.TestTemplate.Name)*@
                @Html.ActionLink(item.TestTemplate.Name, "Details", "TestTemplate", new { id = item.TestTemplate.TestTemplateID }, new { id = item.TestTemplate.TestTemplateID })
            </td>

            <td>
                @Html.ActionLink("Student Answers ", "Answers", new {id = item.StudentTestID})  |
                @Html.ActionLink("Edit", "Edit", new {id = item.StudentTestID})|
                @Html.ActionLink("Delete", "Delete", new {id = item.StudentTestID})
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Back", "Index", "Teacher")
</p>
